<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap.css", "~/Content/css/easyui.css", "~/Content/css/icon.css", "~/Content/css/layout.css")
    @RenderSection("css", false)
</head>
<body>
    <div id="header">
        <p>用户管理后台</p>
        <ul class="header-nav">
            <li id="user">
                <span class="glyphicon glyphicon-user"></span>
                系统管理员
                <span class="glyphicon glyphicon-chevron-down"></span>
                <ul>
                    <li id="btn_current_pwd" data-toggle="modal" data-target="#current_user_modal">密码修改</li>
                    <li><a href="@Href("~/")user/logout">退出系统</a></li>
                </ul>
            </li>
            <li><a href="#">使用帮助</a></li>
            <li><a href="#">初始化数据库</a></li>
            <li><a href="#">备份</a></li>
            <li><a href="#">生成上月统计</a></li>
        </ul>
    </div>

    <div class="easyui-layout" data-options="fit:true">
        <div data-options="region:'south',split:true" style="height:100px"></div>
        <div data-options="region:'west',split:true" title="菜单" style="width:200px;">
            <div class="easyui-accordion" data-options="fit:true">
                @foreach(var menuParent in ViewBag.menus) {
                    <div title="@menuParent["MenuName"]" data-options="selected:@menuParent["selected"]"
                        style="overflow:auto;padding:10px;">
                        <ul class="home-menu">
                            @foreach(var menuChild in @menuParent["Children"]) {
                                <li>
                                    <a href="@menuChild["LinkUrl"]?parentId=@menuParent["Id"]">
                                        <span class="glyphicon glyphicon-play"></span>
                                        @menuChild["MenuName"]
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div data-options="region:'center',title:'@ViewBag.Title'">
            @RenderBody()
        </div>
    </div>

    @RenderSection("bodyElement", false)

    <div id="current_user_modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title">密码修改</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="current_password" class="col-sm-2 col-sm-offset-1 control-label">登录密码</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="current_password" id="current_password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="current_ack_password" class="col-sm-2 col-sm-offset-1 control-label">确认密码</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="current_ack_password" id="current_ack_password">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button id="current_user_save" type="button" class="btn btn-primary">保存</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    @Scripts.Render("~/Scripts/jquery.js", "~/Scripts/jquery.easyui.min.js",
        "~/Scripts/common.js", "~/Scripts/bootstrap.js", "~/Scripts/easyui-lang-zh_CN.js", "~/Scripts/layout.js")
    @RenderSection("js", false)
</body>
</html>
