<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap.css", "~/Content/css/easyui.css", "~/Content/css/icon.css", "~/Content/css/layout.css")
    @RenderSection("css", false)
</head>
<body>
    <div id="header">
        <p>用户管理后台</p>
        <ul class="header-nav">
            <li id="user">
                <span class="glyphicon glyphicon-user"></span>
                系统管理员
                <span class="glyphicon glyphicon-chevron-down"></span>
                <ul>
                    <li>密码修改</li>
                    <li><a href="@Href("~/")user/logout">退出系统</a></li>
                </ul>
            </li>
            <li><a href="#">使用帮助</a></li>
            <li><a href="#">初始化数据库</a></li>
            <li><a href="#">备份</a></li>
            <li><a href="#">生成上月统计</a></li>
        </ul>
    </div>

    <div class="easyui-layout" data-options="fit:true">
        <div data-options="region:'south',split:true" style="height:100px"></div>
        <div data-options="region:'west',split:true" title="菜单" style="width:200px;">
            <div class="easyui-accordion" data-options="fit:true">
                @foreach(var menuParent in ViewBag.menus) {
                    <div title="@menuParent["MenuName"]" style="overflow:auto;padding:10px;">
                        <ul class="home-menu">
                            @foreach(var menuChild in @menuParent["Children"]) {
                                <li>
                                    <a href="@menuChild["LinkUrl"]">
                                        <span class="glyphicon glyphicon-play"></span>
                                        @menuChild["MenuName"]
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div data-options="region:'center',title:'@ViewBag.Title'">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/Scripts/jquery.js", "~/Scripts/jquery.easyui.min.js",
        "~/Scripts/common.js", "~/Scripts/bootstrap.js", "~/Scripts/easyui-lang-zh_CN.js")
    @RenderSection("js", false)
</body>
</html>
