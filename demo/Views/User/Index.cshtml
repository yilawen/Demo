@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
	<style type="text/css">
	header{
		background-image:url("@Href("~/")Content/image/headBg.jpg");
		background-size: contain;
		width: 100%;
		height: 50px;
		position: fixed;
	}
	.h-img{
		padding: 15px;
		margin-left: 25px;
		float: left;
		border-radius: 5px;
	}
	p{
		color: #fff;
		font-size: 20px;
		padding: 12px;
		margin-left: 30px;
		margin-top: -1px;
		float: left;
	}
	.h-right{
		float: right;
		font-size: 13px;
		color: #fff;
		padding: 15px 20px;
		margin-right: 10px;
		cursor: pointer;
		text-decoration: none;
	}
	.h-right a{
		color: #fff;
		text-decoration: none;
		padding-left: 6px;
	}
	.h-right a:hover{
		text-decoration: none;

	}
	.h-right .sysuser{
		color: yellow;
		margin-left: -6px;
	}
	.aside-top .repassword,.aside-top .exist{
		/*background: url(@Href("~/")Content/image/Folder_bigbtu.png) no-repeat 0 0;*/
		width: 70px;
		height: 35px;
		/*border: solid;*/
		border:none;
		border-radius: 10px;
		margin-left: 15px;
		cursor: pointer;
		outline: none;

	}

	.repassword a,.exist a{
		font-size: 13px;
		border: none;
		outline: none;
		text-decoration: none;
		color: #165e92;

	}
	.repassword:hover,.exist:hover{
		border: 0.5px solid #165e92;
	}
	body{
	position: relative;

}
ul{
	margin:0;
	padding: 0;
}

/*aside*/
aside{
	position: absolute;
	margin-top: 50px;
	border:solid;
	width: 200px;
	height: 620px;
	border: 0.1px solid #165e92;
	/*background-image:url("@Href("~/")Content/image/body_background.png"); */
		background-size: contain;
}
.aside-top{
	width: 100%;
	padding: 10px 3px;
}

/*修改EasyUI css样式*/
.tabs-title{
	display: inline-block;
	-webkit-writing-mode:vertical-lr;
	font-size: 15px;
	line-height:20px;
	margin-top: 18px;
	margin-left: -2px;
	color: #165e92;
	word-spacing: 10px;
	background: #fff;


}
.tabs{
border-color: rgba(22, 94, 146, 0.14);
	background: #fff;

}
.tabs-header-left .tabs li{
	background: #fff;

}
.tabs li a.tabs-inner{
	/*border-color: rgba(22, 94, 146, 0.14);*/
	background-color: rgba(22, 94, 146, 0.25);
}
.tabs-header{
	background: #fff;
	/*border: 0.5px solid #ccc;*/
	border-color: rgba(22, 94, 146, 0.14);
}
.tabs-panels .tabs-title{
	-webkit-writing-mode:horizontal-tb;

}
.aside-switch{
	width: 100%;
	border: solid;
}
.aside-switch .sideLeft{
	float: left;
	width: 50px;
}
.sideLeft{
	margin: 0;
	padding: 0;

}
.ffirst li{
	padding: 10px 5px 10px 20px;
	border: 0.5px solid #ccc;
	font-size: 13px;
}
.ffirst li a{
	color: #165e92;
	text-decoration:none;
}
main{
	position:absolute;
	left: 300px;
	top: 50px;
}

	</style>
}
	<header>

		<p>用户管理后台</p>
		<div class="h-right">
			<!-- <span id="labCompanyName">东莞惠森木业有限公司</span>
		-->
		<span>当前用户:</span>
		<a href="" class="sysuser">系统管理员</a>
		<a href="">使用帮助</a>
		<a>初始化数据库</a>
		<a>备份</a>
		<a>生成上月统计</a>

	</div>

</header>
<aside>
	<div class="aside-top">
		<button class="repassword" title="修改密码">
			<a>修改密码</a>
		</button>
		<button class="exist">
			 <a href="@Href("~/")user/logout">退出系统</a>
		
	</button>
</div>

<div class="sideLeft" id="sideLeft">

	<div class="easyui-tabs" id="secfirst" data-options="tabPosition:'left',
	tabHeight:90,headerWidth:40,border:false,
	" style="width:200px;height: 565px;">
		@foreach(var menuParent in ViewBag.menus) {
		<div title="@menuParent["MenuName"]" >
			<ul class="ffirst">
				@foreach(var menuChild in @menuParent["Children"]) {
				<li class="tab" data-href="">
					<a href="@menuChild["LinkUrl"]">@menuChild["MenuName"]</a>
				</li>
				}
			</ul>
		</div>
		}
	</div>

</aside>
<main>
<div id="fpan" class="easyui-panel" title="项目管理"
    style="width:500px;height:150px;padding:10px;background:#fafafa;"
    data-options="iconCls:'icon-save',closable:true,
    collapsible:true,minimizable:true,maximizable:true">
    <div class="mquery">
        <p>用户列表</p>
        <div class="mlist">
            
        </div>
    </div>
</div>
</main>